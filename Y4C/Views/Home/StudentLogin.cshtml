@model Y4C.Models.Account

@{
    ViewData["Title"] = "StudentLogin";
}

<br />
<h2>Student Log In</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StudentLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentUser" class="control-label">Username</label>
                <input asp-for="StudentUser" class="form-control" />
                <span asp-validation-for="StudentUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentPwd" class="control-label">Password</label>
                <input asp-for="StudentPwd" class="form-control" />
                <span asp-validation-for="StudentPwd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>


