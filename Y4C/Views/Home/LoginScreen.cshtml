
@{
    ViewData["Title"] = "LoginScreen";
}

<br />
<h2>Login</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="StudentLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Student Login" class="btn btn-default" href="/Home/StudentLogin"/>
            </div>
            </form>
            <form asp-action="AdminLogin">
                <div class="form-group">
                    <input type="submit" value="Admin Login" class="btn btn-default" href="Home/AdminLogin" />
                </div>
            </form>
    </div>
</div>

