@model System.Collections.Generic.IEnumerable<Y4C.Models.AddContent>

<center>
    <br />
    <div><img src="~/images/Y4Clogo.png" alt="Y4C" width="200" height="78"></div>
    <h1>Welcome to Yoga 4 Change</h1>

</center>
<div class="container">
    @foreach (var item in @Model)
    {

        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card">
                <div class="card" style="width: 30rem">
                    <img class="card-img-top" src="~/images/Y4CEmblem.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <a href="/Home/PlayVideo/@item.Id" class="btn btn-primary">@item.Id</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<br />
